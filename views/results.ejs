<!DOCTYPE html>
<html>

<head>
  <meta charset="utf-8">
  <title>Résultats de recherche</title>
  <link rel="stylesheet" href="/css/style.css">
</head>
<header>
  <div class="logo">
    <img src="/img/esme.png" alt="Logo de mon site web">
  </div>
  <nav class="navbar">
    <ul>
      <li><a href="#">Walid</a></li>
      <li><a href="#">Yacine</a></li>
      <li><a href="#">Metyn</a></li>
      <li><a href="#">Cyril</a></li>
    </ul>
  </nav>
</header>

<body>
  <h1 id="title">Résultats de recherche pour "<%= keyword %>"</h1>
  <% if (items.length===0) { %>
    <p>Aucun résultat trouvé.</p>
    <% } else { %>
      <ul class="container">
        <% items.forEach(function(item) { %>
          <li class="box">
            <h2><a href="<%= item.link %>">
                <%= item.name %>
              </a></h2>
            <p>
              <%= item.description %>
            </p>
          </li>
          <% }); %>
      </ul>
      <% } %>
</body>

</html>